<div class="container">
  <div id="welcome">
    <h1>Welcome to your notepad!</h1>
  <p>What would you like to do?</p>
  <button id="show_form" type="button">Pen a Note</button>
  <button id="show_posts" type="button">Reflect on My Notes</button>
  </div>
  <div id="hidden_form">
    <h2>We're making a note</h2>
    <form action="/create" method="post">
      <input type="text" name="title" placeholder="Name me!!!">
      <textarea name="content" placeholder="What would you like to say?"></textarea>
      <input type="submit" value="Post it!">
    </form>
  </div>
  <div id="all_notes">
    <ul>
    <% if @all_notes %>
      <h2>Your notes:</h1>
      <% @all_notes.each do |note| %>
        <%= erb :_note_item_view, :locals => {:note => note }  %>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>
